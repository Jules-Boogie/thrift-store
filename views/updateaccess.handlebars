<h1 class="text-center display-5">Update {{this.Type}}</h1>

<form data-id="{{this.id}}" class="container text-center update-access">
  <div class="mx-auto form-group w-50 ">
    <label for="item">Item for Sale:</label>
    <input class="form-control" type="text" id="item" name="item" value="{{this.Type}}">
  </div>

  <div class="mx-auto form-group w-50 ">
    <label for="brand">Brand Name:</label>
    <input class="form-control" type="text" id="brand" name="brand" value="{{this.Designer}}">
  </div>

  <div class="mx-auto form-group w-50 ">
    <label for="cost">Price:</label>
    <input class="form-control" type="text" id="cost" name="cost" value="{{this.Cost}}">
  </div>

  <div class="mx-auto form-group w-50 ">
    <label for="item">Item Description:</label>
    <textarea class="form-control" rows="3" id="description" name="description" rows="8"
      cols="40">{{this.Description}}</textarea>
  </div>
  <button class="btn-primary" type="submit">Update Price</button>
</form>

<script>
  $(document).ready(function () {
    $(".update-access").on("submit", function (event) {
      //Make sure to preventDefault on a submit event.
      event.preventDefault();

      var updatedItem = {
        Type: $("#item").val().trim(),
        Designer: $("#brand").val().trim(),
        Cost: $("#cost").val().trim(),
        Description: $("#description").val().trim()
      };

      var id = $(this).data("id");

      //Send the POST request.
      $.ajax("/api/accessories/" + id, {
        type: "PUT",
        data: updatedItem
      }).then(
        function () {
          console.log("updated accessory post");
          //Reload the page to get the updated list
          location.assign("/accessories");
        }
      );
    });
  });
</script>